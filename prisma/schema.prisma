generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  referralDiscountUsed Boolean @default(false)

  subscriptions        Subscription[]
  sentInvitations      Invitation[]      @relation("UserInvitations")
  invitedSubscriptions Subscription[]    @relation("UserInvitesReceived")
  viewingProgress      ViewingProgress[] @relation("UserViewingProgress")
  watchlist            Watchlist[]       @relation("UserWatchlist")
}

model Title {
  id              Int        @id @default(autoincrement())
  name            String
  type            TitleType
  description     String
  releaseYear     Int

  episodes            Episode[] @relation("TitleEpisodes")
  seasons             Season[]  @relation("TitleSeasons")
  qualities           Quality[] @relation("TitleQualities")
  viewingProgress     ViewingProgress[] @relation("TitleViewingProgress")
  watchlist           Watchlist[] @relation("TitleWatchlist")
}

enum TitleType {
  MOVIE
  SERIES
}

model Quality {
  titleId   Int
  name QualityName

  title     Title   @relation("TitleQualities", fields: [titleId], references: [id], onDelete: Cascade)

  @@id([titleId, name])
}

enum QualityName {
  SD
  HD
  UHD
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELED
}

enum InvitationStatus {
  PENDING
  REDEEMED
  EXPIRED
  CANCELED
}

model Season {
  id            Int       @id @default(autoincrement())
  titleId       Int
  seasonNumber  Int
  // Relations
  title         Title     @relation("TitleSeasons", fields: [titleId], references: [id], onDelete: Cascade)
  episodes      Episode[]   @relation("SeasonEpisodes")
}

model Episode {
  id              Int     @id @default(autoincrement())
  titleId         Int
  seasonId        Int?    // Can be null for movies
  episodeNumber   Int
  name            String? // Can be null for movies
  description     String? // Can be null for movies
  durationSeconds Int
  videoUrl        String

  // Relations
  title           Title     @relation("TitleEpisodes", fields: [titleId], references: [id], onDelete: Cascade)
  season          Season?   @relation("SeasonEpisodes", fields: [seasonId], references: [id], onDelete: SetNull)
  viewingProgress ViewingProgress[] @relation("EpisodeViewingProgress")

  @@unique([seasonId, episodeNumber])
}

model SubscriptionPlan {
  id                Int          @id @default(autoincrement())
  code              String       @unique
  name              String
  priceCents        Int
  currency          String       @default("EUR")
  maxQuality        QualityName
  concurrentStreams Int          @default(1)
  trialDays         Int          @default(7)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  subscriptions     Subscription[]
}

model Subscription {
  id                 Int                @id @default(autoincrement())
  userId             Int
  planId             Int
  status             SubscriptionStatus @default(ACTIVE)
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  trialEndsAt        DateTime?
  autoRenew          Boolean            @default(true)
  discountPercent    Int                @default(0)
  discountEndsAt     DateTime?
  invitedByUserId    Int?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan               SubscriptionPlan   @relation(fields: [planId], references: [id])
  invitation         Invitation?        @relation("InvitationRedemption")
  invitedByUser      User?              @relation("UserInvitesReceived", fields: [invitedByUserId], references: [id])
}

model Invitation {
  id                   Int               @id @default(autoincrement())
  code                 String            @unique
  inviterId            Int
  inviteeEmail         String
  status               InvitationStatus  @default(PENDING)
  discountPercent      Int               @default(25)
  discountDurationDays Int               @default(30)
  expiresAt            DateTime
  redeemedAt           DateTime?
  subscriptionId       Int?              @unique
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt

  inviter              User              @relation("UserInvitations", fields: [inviterId], references: [id], onDelete: Cascade)
  subscription         Subscription?     @relation("InvitationRedemption", fields: [subscriptionId], references: [id])
}

model ViewingProgress {
  id                 Int       @id @default(autoincrement())
  userId             Int
  titleId            Int
  episodeId          Int?      // For series tracking which episode
  positionSeconds    Int       @default(0)  // Last known position
  totalDurationSeconds Int
  isCompleted        Boolean   @default(false)  // Whether watched in entirety
  autoPlayNextEpisode Boolean @default(true)   // For series, auto-continue to next
  lastViewedAt       DateTime
  completedAt        DateTime? // When finished watching
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  user               User      @relation("UserViewingProgress", fields: [userId], references: [id], onDelete: Cascade)
  title              Title     @relation("TitleViewingProgress", fields: [titleId], references: [id], onDelete: Cascade)
  episode            Episode?  @relation("EpisodeViewingProgress", fields: [episodeId], references: [id], onDelete: SetNull)

  @@unique([userId, titleId, episodeId])
}

model Watchlist {
  id          Int       @id @default(autoincrement())
  userId      Int
  titleId     Int
  addedAt     DateTime  @default(now())
  removedAt   DateTime? // When removed (usually after completion)

  user        User      @relation("UserWatchlist", fields: [userId], references: [id], onDelete: Cascade)
  title       Title     @relation("TitleWatchlist", fields: [titleId], references: [id], onDelete: Cascade)

  @@unique([userId, titleId])
}
