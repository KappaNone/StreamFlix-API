# Copy this file to .env or .env.prod and fill in real secrets before running docker-compose.
DB_NAME=streamflix
DB_USER=streamflix_user
DB_PASSWORD=
JWT_SECRET=

# Optional external integrations
TMDB_API_KEY=

# Demo seed users
DEMO_USERS_PASSWORD=

# Email Configuration (SMTP)
# Configure these to enable email sending for verification and password reset
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@streamflix.com

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# Email Service Configuration Examples:
# Gmail: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_SECURE=false
# Gmail (TLS): Use "App Passwords" (not your regular password)
# Outlook: SMTP_HOST=smtp-mail.outlook.com, SMTP_PORT=587, SMTP_SECURE=false
# SendGrid: SMTP_HOST=smtp.sendgrid.net, SMTP_PORT=587, SMTP_USER=apikey
